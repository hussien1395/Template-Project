@model IEnumerable<Movie>

<div class="container">
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">All Movies</h2>
        </div>
        <div class="col-md-6 text-md-end text-start mt-2 mt-md-0">
            <a href="/Admin/Movie/Create" class="btn btn-success">Create Movie</a>
        </div>
    </div>

    <div id="tableMovies" data-list='{"valueNames":["id","name","category","cinema","status"],"page":5,"pagination":true}'>
        <div class="row justify-content-end g-0 mb-3">
            <div class="col-auto col-sm-5">
                <div class="input-group">
                    <input class="form-control form-control-sm shadow-none search" type="search" placeholder="Search..." aria-label="search" />
                    <div class="input-group-text bg-transparent">
                        <span class="fa fa-search fs--1 text-600"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="table-responsive scrollbar">
            <table class="table table-bordered table-striped fs--1 mb-0">
                <thead class="bg-200 text-900">
                    <tr>
                        <th class="sort" data-sort="id">#</th>
                        <th class="sort" data-sort="name">Name</th>
                        <th>Description</th>
                        <th class="sort" data-sort="status">Status</th>
                        <th>Date</th>
                        <th class="sort" data-sort="category">Category</th>
                        <th class="sort" data-sort="cinema">Cinema</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>

                <tbody class="list">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="id">@item.Id</td>
                            <td class="name">@item.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <span>@(item.Description.Length > 40 ? item.Description.Substring(0, 40) + "..." : item.Description)</span>
                                }
                                else
                                {
                                    <span class="text-muted">No Description</span>
                                }
                            </td>
                            <td class="status">
                                <span class="badge @(item.Status == "Active" ? "bg-success" : "bg-secondary")">
                                    @item.Status
                                </span>
                            </td>
                            <td>@item.DateTime.ToString("yyyy-MM-dd")</td>
                            <td class="category">@item.Category?.Name</td>
                            <td class="cinema">@item.Cinema?.Name</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.MainImage))
                                {
                                    <img src="@Url.Content("~/Uploads/Movies/" + item.MainImage)"
                                         alt="Movie Image"
                                         width="60" height="60"
                                         class="rounded shadow-sm border" />
                                }
                                else
                                {
                                    <img src="@Url.Content("~/images/no-image.png")"
                                         alt="No Image"
                                         width="60" height="60"
                                         class="rounded shadow-sm border" />
                                }
                            </td>

                            <td class="text-center">
                                <div class="d-flex justify-content-center gap-2">
                                    <!-- Edit Button -->
                                    <a href="/Admin/Movie/Update/@item.Id" class="btn btn-sm btn-warning text-white px-3 py-1 shadow-sm">
                                        <i class="fas fa-edit me-1"></i> Edit
                                    </a>

                                    <!-- Delete Form -->
                                    <form method="post" action="/Admin/Movie/Delete/@item.Id" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-danger px-3 py-1 shadow-sm"
                                                onclick="return confirm('Are you sure you want to delete this movie?');">
                                            <i class="fas fa-trash-alt me-1"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <button class="btn btn-sm btn-falcon-default me-1" type="button" title="Previous" data-list-pagination="prev">
                <span class="fas fa-chevron-left"></span>
            </button>
            <ul class="pagination mb-0"></ul>
            <button class="btn btn-sm btn-falcon-default ms-1" type="button" title="Next" data-list-pagination="next">
                <span class="fas fa-chevron-right"></span>
            </button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const options = {
                valueNames: ["id", "name", "category", "cinema", "status"],
                page: 5,
                pagination: true
            };
            new List("tableMovies", options);

            @if (TempData["Success"] != null)
            {
                    <text>
                        toastr.success('@TempData["Success"]');
                    </text>
            }
        });
    </script>
}
