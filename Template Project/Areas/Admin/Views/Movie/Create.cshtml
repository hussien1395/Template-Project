@model Template_Project.ViewModel.MoviesVM
@{
    ViewData["Title"] = "Create Movie";
}

<div class="container mt-4">
    <div class="row mb-3 align-items-center">
        <div class="col-md-8">
            <h3 class="fw-bold">@ViewData["Title"]</h3>
        </div>
        <div class="col-md-4 text-end">
            <a href="/Admin/Movie/Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>

    <form asp-action="Create" enctype="multipart/form-data" method="post">
        @Html.AntiForgeryToken()

        <div class="card shadow-sm p-4">
            <div class="row g-3">

                <!-- Movie Name -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Name</label>
                    <input asp-for="Movie.Name" class="form-control" placeholder="Enter movie name" required />
                    <span asp-validation-for="Movie.Name" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Description</label>
                    <input asp-for="Movie.Description" class="form-control" placeholder="Short description" />
                    <span asp-validation-for="Movie.Description" class="text-danger"></span>
                </div>

                <!-- Price -->
                <div class="col-md-4">
                    <label class="form-label fw-bold">Price</label>
                    <input asp-for="Movie.Price" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Movie.Price" class="text-danger"></span>
                </div>

                <!-- Status -->
                <div class="col-md-4">
                    <label class="form-label fw-bold">Status</label>
                    <select asp-for="Movie.Status" class="form-select">
                        <option value="Active">Active</option>
                        <option value="Inactive">Inactive</option>
                    </select>
                </div>

                <!-- Date -->
                <div class="col-md-4">
                    <label class="form-label fw-bold">Date</label>
                    <input asp-for="Movie.DateTime" class="form-control" type="date" />
                    <span asp-validation-for="Movie.DateTime" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Category</label>
                    <select asp-for="Movie.CategoryId" class="form-select" asp-items="Model.Categories">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="Movie.CategoryId" class="text-danger"></span>
                </div>

                <!-- Cinema -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Cinema</label>
                    <select asp-for="Movie.CinemaId" class="form-select" asp-items="Model.Cinemas">
                        <option value="">-- Select Cinema --</option>
                    </select>
                    <span asp-validation-for="Movie.CinemaId" class="text-danger"></span>
                </div>

                <!-- Main Image -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Main Image</label>
                    <input type="file" name="img" class="form-control" accept="image/*" required />
                </div>

                <!-- Sub Images -->
                <div class="col-md-6">
                    <label class="form-label fw-bold">Sub Images</label>
                    <input type="file" name="SubImages" class="form-control" accept="image/*" multiple />
                </div>

                <!-- Actors -->
                <div class="col-md-12">
                    <label class="form-label fw-bold">Select Actors</label>
                    <select asp-for="SelectedActors" asp-items="Model.Actors" class="form-select" multiple size="6"></select>
                    <small class="text-muted">Hold <b>Ctrl</b> (Windows) or <b>Cmd</b> (Mac) to select multiple.</small>
                </div>

                <!-- Submit -->
                <div class="col-12 text-end mt-4">
                    <button type="submit" class="btn btn-success px-4">Save Movie</button>
                </div>

            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
